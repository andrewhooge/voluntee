<h1>Listing open_positions</h1>

<table>
  <thead>
    <tr>
      <th>Open position</th>
      <th>Details</th>
      <th>Interest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @open_positions.each do |open_position| %>
      <tr>
        <td><%= open_position.open_position %></td>
        <td><%= open_position.details %></td>
        <td><%= open_position.interest %></td>
        <td><%= link_to 'Show', open_position %></td>
        <td><%= link_to 'Edit', edit_open_position_path(open_position) %></td>
        <td><%= link_to 'Destroy', open_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Open position', new_open_position_path %>
