<!DOCTYPE html>
<html>
<head>
  <title>Voluntee</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Nav Wrap -->
  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name"></li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <!-- The Section wrap -->
    <section class="top-bar-section">

      <!-- Left Nav Section -->
      <ul class="left">
        <li class="active"> <%= link_to 'Landing', root_path %></li>
      </ul>

      <!-- Right Nav Section -->
      <ul class="right">

        <% if user_signed_in? %>
            <li><%= link_to "Logged in as #{current_user.email}", edit_user_registration_path %></li>
            <li class="active"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
            <li> <%= link_to 'Sign up', new_user_registration_path %> </li>
            <li><%= link_to "Login", user_session_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>
</head>

<body>
<%= yield %>

</body>
